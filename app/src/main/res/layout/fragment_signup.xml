<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.mike.itesm.Fragments.User.ClientCRUD.SignupFragment"
android:weightSum="1">

<Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.03" />

<TextView
    android:id="@+id/signupTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.02"
    android:fontFamily="sans-serif"
    android:text="create Date"
    android:textAlignment="center"
    />

<Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.04" />

<EditText
    android:id="@+id/firstNameTextField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:ems="10"
    android:hint="@string/firstnameText"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/lastNameTextField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:ems="10"
    android:hint="@string/lastnameText"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/lastSecondNameTextField"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:ems="10"
    android:hint="Apellido Materno"
    android:inputType="textPersonName" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/contactTextField"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Contacto"
        android:inputType="number" />

    <EditText
        android:id="@+id/photoTextField"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Foto"
        android:inputType="textPersonName" />

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/signupButton" />


</LinearLayout>
</LinearLayout>

